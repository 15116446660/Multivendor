{% if languages|length > 1 %}
<form iaction="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
<div class="btn-group toggle-wrap">
  <span class="toggle">
      {% for language in languages %}
    {% if language.code == code %} 
    <span><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" height="11" width="16"></span>
    {% endif %}
    {% endfor %}
    <span class="hidden">{{ text_language }}</span>&nbsp;
    <i class="fa fa-caret-down"></i>
   </span>                
        <ul style="display: none;" class="toggle_cont pull-right">
          {% for language in languages %}
          <li>
            <button class="language-select selected" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}"  height="11" width="16"/> {{ language.name }}</button>
          </li>
          {% endfor %}
        </ul>
</div>
<input type="hidden" name="code" value="" />
<input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
{% endif %}
